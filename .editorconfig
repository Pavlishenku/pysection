# EditorConfig pour OpenCDS
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,rst}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{toml,cfg,ini}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab

[*.bat]
end_of_line = crlf

